@page "{id:int}"
@model DetailsModel
@{
    ViewData["Title"] = "Challenge Details";
}

<h1>Challenge Details</h1>

<div>
    <h4>@Model.Challenge.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Challenge.Description
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>

        <dd class="col-sm-10">
            @Model.Challenge.Category
        </dd>
        <dt class="col-sm-2">
            Difficulty
        </dt>
        <dd class="col-sm-10">
            @Model.Challenge.Difficulty
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.Challenge.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.Challenge.EndDate.ToShortDateString()
        </dd>
    </dl>
</div>
