@page "{id:int}"
@model EditModel
@{
    ViewData["Title"] = "Edit Challenge";
}

<h1>Edit Challenge</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Challenge.Title"></label>
        <input asp-for="Challenge.Title" class="form-control" />
        <span asp-validation-for="Challenge.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Description"></label>
        <textarea asp-for="Challenge.Description" class="form-control"></textarea>
        <span asp-validation-for="Challenge.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Category"></label>
        <input asp-for="Challenge.Category" class="form-control" />
        <span asp-validation-for="Challenge.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Difficulty"></label>
        <input asp-for="Challenge.Difficulty" class="form-control" />
        <span asp-validation-for="Challenge.Difficulty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.StartDate"></label>
        <input asp-for="Challenge.StartDate" class="form-control" type="date" />
        <span asp-validation-for="Challenge.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.EndDate"></label>
        <input asp-for="Challenge.EndDate" class="form-control" type="date" />
        <span asp-validation-for="Challenge.EndDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

